{
  "extends": "../tsconfig.settings.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h"
  },
  "include": ["src", "types/jsx.d.ts", "tailwind.config.js"],
  "exclude": ["node_modules", "src/**/*.spec.ts*", "src/**/*.stories.ts*", "src/**/*.story.ts*", "src/**/*.e2e.ts*"],
  "references": [{"path": "../common"}]
}
